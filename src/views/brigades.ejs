<%- include('partials/header') %>

<%if (brigades.length) { %>


    <div class="col-md-4 offset-md-4"> 
        <% brigades.forEach(function(entry){ %>
            <div class="card my-2">
                <div class="card-header bg-primary text-white">
                </div>
                <div class="card-body">
                    <p> <b>brigadeID:</b> <%= entry.brigadeID %></p>
                    <p> <b>Username:</b> <%=entry.username %></p>
                </div>
            </div>
        <%})%>
    

<% } else {%>
    <p>No entries! <a href="/new-entry"> Add One!</a></p>
<% } %>

<form method="post"> <!--role="form"-->

    <div class="form-group">
        <label for ="title">brigadeID</label>
        <input type="2" name="brigadeID" id="brigadeID" class="form-control" placeholder="Ingresa el ID a Borrar" required>
    </div>

    <div class="form-group  my-2 ">
        <input type="submit" value="Borrar" class="btn btn-danger"
    </div>

</form>

<%- include('partials/footer') %>