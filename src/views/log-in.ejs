<%- include('partials/header') %>

<div class="col-md-4 offset-md-4">
    <h2 class="text-center">Bienvenido a la plataforma de auxilio</h2>
    <h2 class="text-center">Inicia sesión</h2>

    <form method="post"> <!--role="form"-->
        <div class="form-group">
            <label for ="title">Username</label>
            <input type="text" name="username" id="username" class="form-control" placeholder="Ingresa tu username" required>
        </div>

        <div class="form-group">
            <label for ="title">Password</label>
            <input type="text" name="password" id="password" class="form-control" placeholder="Ingresa tu contraseña" required>
        </div>

        <div class="form-group  my-2 ">
            <input type="submit" value="Iniciar sesión" class="btn btn-danger"
        </div>

        <a href="/sign-up" class="btn btn-secondary my-2" >Registra un nuevo usuario </a>
        

    </form>
</div>


<%- include('partials/footer') %>